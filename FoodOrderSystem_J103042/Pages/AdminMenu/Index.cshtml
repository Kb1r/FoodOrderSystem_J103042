@page
@model FoodOrderSystem_J103042.Pages.AdminMenu.IndexModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-center my-4">🛠️ Admin Menu Management 🛠️</h2>

<p class="text-center">
    <a asp-page="Create" class="btn btn-success">➕ Add New Item</a>
</p>

<div class="admin-menu-container">
    @foreach (var item in Model.FoodItems)
    {
        <div class="admin-food-item">
            <img src="@Url.Content(item.ImageUrl)" alt="@item.Item_Name">
            <div class="admin-food-details">
                <h3>@item.Item_Name</h3>
                <p>@item.Item_Desc</p>
                <div class="food-price">£@(item.Price.ToString("0.00"))</div>
                <div class="admin-actions">
                    <a asp-page="Edit" asp-route-id="@item.ID" class="btn btn-warning">✏️ Edit</a>
                    <a asp-page="Delete" asp-route-id="@item.ID" class="btn btn-danger">❌ Delete</a>
                </div>
            </div>
        </div>
    }
</div>
