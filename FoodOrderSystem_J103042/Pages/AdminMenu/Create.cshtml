@page
@model FoodOrderSystem_J103042.Pages.AdminMenu.CreateModel

<h2>Add New Food Item</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="FoodItem.Item_Name" class="form-control" required />
        <span asp-validation-for="FoodItem.Item_Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="FoodItem.Item_Desc" class="form-control" required></textarea>
        <span asp-validation-for="FoodItem.Item_Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price (£)</label>
        <input asp-for="FoodItem.Price" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" asp-for="UploadImage" class="form-control" id="imageInput" />
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <img id="imagePreview" src="#" alt="Image Preview" style="max-width: 200px; display: none;" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <script>
        document.getElementById("imageInput").addEventListener("change", function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById("imagePreview");
                output.src = reader.result;
                output.style.display = "block";
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>
}
